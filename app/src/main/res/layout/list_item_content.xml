<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/list_item_general_margin">

    <TextView
        android:id="@+id/employee_id_label"
        android:text="@string/employee_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/employee_id_text"
        android:layout_toEndOf="@id/employee_id_label"
        android:layout_marginStart="@dimen/list_item_general_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123456" />

    <TextView
        android:id="@+id/employee_name_label"
        android:text="@string/employee_name_label"
        android:layout_below="@id/employee_id_label"
        android:layout_alignBaseline="@id/employee_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/employee_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/employee_name_label"
        android:layout_marginStart="@dimen/list_item_general_margin"
        android:layout_below="@+id/employee_id_text"
        android:layout_marginTop="@dimen/list_item_general_margin"
        android:textSize="@dimen/emplyee_name"
        tools:text="Simple Employee" />

</RelativeLayout>